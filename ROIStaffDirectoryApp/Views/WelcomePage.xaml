<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ROIStaffDirectoryApp.Views.WelcomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Welcome"
    BackgroundColor="#f0f0f0">

    <StackLayout Padding="30" VerticalOptions="Center">
        <Image Source="roi_logo_colored.png"
               HeightRequest="100"
               HorizontalOptions="Center" />

        <Label Text="WELCOME"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="Red"
               Margin="0,20,0,0" />

        <Label Text="ROI STAFF DIRECTORY"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="Red" />

        <Button Text="STAFF DIRECTORY"
                BackgroundColor="#E53935"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="25"
                Margin="0,30,0,0"
                Clicked="OnStaffDirectoryClicked" />
    </StackLayout>
</ContentPage>
