<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ROIStaffDirectoryApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ROIStaffDirectoryApp.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="ROIStaffDirectoryApp">

    <ShellContent
        Title="Splash"
        ContentTemplate="{DataTemplate views:SplashPage}"
        Route="SplashPage" />

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />
    
    <ShellContent
    Title="Sign Up"
    ContentTemplate="{DataTemplate views:SignUpPage}"
    Route="SignUpPage" />

    <ShellContent
        Title="Welcome"
        ContentTemplate="{DataTemplate views:WelcomePage}"
        Route="WelcomePage" />

    <ShellContent
        Title="Staff Directory"
        ContentTemplate="{DataTemplate views:StaffDirectoryPage}"
        Route="StaffDirectoryPage" />

    <ShellContent
    Title="Profile"
    Route="StaffProfilePage"
    ContentTemplate="{DataTemplate views:StaffProfilePage}" />



</Shell>
